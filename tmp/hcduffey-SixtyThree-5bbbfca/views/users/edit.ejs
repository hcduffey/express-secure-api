<!DOCTYPE html>
<html lang="en">
    
<%- include( '../partials/head.ejs', { page: 'Edit User Profile'}) %>

<body>
    <%- include('../partials/nav.ejs') %>

    <form action="/users/<%= user._id %>?_method=PUT" method="POST">
        <label for="name">Name</label>
        <input name="name" type="text" value="<%= user.name %>">

        <label for="email">E-mail Address</label>
        <input name="email" type="email" value="<%= user.email %>">

        <!-- TODO: Add avatar selection feature -->
        <input name="avatar" type="hidden" value="<%= user.avatar %>">

        <label for="password">Password</label>
        <input name="password" type="password" size="30" placeholder="Leave blank to keep your same password">

        <button type="submit">Submit</button>
    </form>
</body>
</html>